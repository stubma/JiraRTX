<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="luma/jira/plugin/rtxnotifier/i18n"/>
    
    <!-- add our web resources -->
    <web-resource key="rtxnotifier-resources" name="rtxnotifier Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="rtxnotifier.css" location="/css/rtxnotifier.css"/>
        <resource type="download" name="rtxnotifier.js" location="/js/rtxnotifier.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>rtxnotifier</context>
    </web-resource>
    
    <!-- listener -->
    <component-import key="eventPublisher" interface="com.atlassian.event.api.EventPublisher"/>
	<component key="eventListener" class="luma.jira.plugin.rtxnotifier.IssueCreatedResolvedListener">
		<description>Class that processes the incoming JIRA issue events.</description>
	</component>
	
	<!-- admin -->
	<component-import key="userManager" interface="com.atlassian.sal.api.user.UserManager" />
	<component-import key="loginUriProvider" interface="com.atlassian.sal.api.auth.LoginUriProvider" />
	<component-import key="renderer" interface="com.atlassian.templaterenderer.velocity.one.six.VelocityTemplateRenderer" />
	<servlet key="admin-servlet" class="luma.jira.plugin.rtxnotifier.AdminServlet">
		<url-pattern>/rtxnotifier/admin</url-pattern>
	</servlet>

    <!-- import from the product container -->
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties" />

    <!-- menu in navigation bar -->
   	<web-item key="nav_menu" name="Nav Menu" section="system.top.navigation.bar" weight="46">
		<description>Link to rtxnotifier-admin page.</description>
		<label key="rtxnotifier.nav.menu" />
		<link linkId="rtxnotifier_nav"></link>
	</web-item>
    <web-section key="rtxnotifier_dropdown" name="RTX Notifier DropDown" location="rtxnotifier_nav" weight="10"/>
	<web-item key="config_rtx_server" name="Config RTX Server" section="rtxnotifier_nav/rtxnotifier_dropdown" weight="10">
		<label key="rtxnotifier.nav.config.rtx.server"></label>
		<link linkId="rtxnotifier_admin">/plugins/servlet/rtxnotifier/admin</link>
	</web-item>
</atlassian-plugin>